{% extends '/back/base.html.twig' %}

{% block title %}Création de page {{ parent() }}{% endblock %}

{% block pageTitle %}Nouvelle page {% endblock %}

{% block body %}
    {% block content %}
    <div class="container">
        <div class="main-column">
            {% if successMessage %}
                <div class="success-alert-message">
                    {{ successMessage | raw }}
                </div>
            {% endif %}
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.content) }}
            <h3 class="seoSection">SEO</h3>
            {{ form_row(form.seo.metaTitle) }}
            <span class="countMetaSeo" id="title-char-count">60 caractères restants</span>
            {{ form_row(form.seo.metaDescription) }}
            <span class="countMetaSeo" id="description-char-count">120 caractères restants</span>
            {{ form_row(form.seo.indexation) }}
            
        </div>
        <div class="sidebar-right">
            {{ form_row(form.status) }}
            {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.tiny.cloud/1/ggh2a7sc3rwms25itz7ngimudjedeaqimxkc4sv7rledu94j/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
        <script src="{{ asset('assets/js/tinyMCE/tinyMCE.js') }}"></script>
        <script src="{{ asset('assets/js/seo/add/metaTitleLimitCaracters.js') }}"></script>
        <script src="{{ asset('assets/js/seo/add/metaDescriptionLimitCaracters.js') }}"></script>
    <script>


    </script>
    {% endblock %}
{% endblock %}
